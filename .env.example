# YOLO Model Settings
MODEL_PATH=model/best.pt
CONFIDENCE_THRESHOLD=0.5

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# API Settings
PORT=8000
HOST=0.0.0.0

# FastAPI Backend
NEXT_PUBLIC_API_URL=http://localhost:8000

# Detection Configuration
NEXT_PUBLIC_CONFIDENCE_THRESHOLD=0.5
NEXT_PUBLIC_MAX_DETECTIONS=5

# Audio Settings
NEXT_PUBLIC_ENABLE_AUDIO=true
NEXT_PUBLIC_AUDIO_VOLUME=0.7

# Zone Configuration
NEXT_PUBLIC_DEFAULT_ZONES={"recycling":{"x":0.1,"y":0.2,"width":0.3,"height":0.4,"type":"recycling"},"trash":{"x":0.6,"y":0.2,"width":0.3,"height":0.4,"type":"trash"}}

# Analytics Dashboard
NEXT_PUBLIC_UPDATE_INTERVAL=3000  # milliseconds

# Debug Mode (set to false in production)
NEXT_PUBLIC_DEBUG_MODE=true 